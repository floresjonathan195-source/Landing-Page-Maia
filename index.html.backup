    <script>
        document.addEventListener('DOMContentLoaded', () => {
            const langButtons = document.querySelectorAll('.lang-button');
            const langElements = document.querySelectorAll('[data-lang-es], [data-lang-en]');
            const body = document.body;
            const scrollToTopBtn = document.getElementById('scrollToTopBtn');
            const scrollToTopContainer = document.querySelector('.scroll-to-top-container');

            // Scroll to top functionality
            function handleScroll() {
                if (window.pageYOffset > 300) {
                    scrollToTopContainer.classList.add('show');
                } else {
                    scrollToTopContainer.classList.remove('show');
                }
            }

            function scrollToTop() {
                window.scrollTo({
                    top: 0,
                    behavior: 'smooth'
                });
            }

            // Add scroll event listener
            window.addEventListener('scroll', handleScroll);
            
            // Add click event listener to scroll to top button
            scrollToTopBtn.addEventListener('click', scrollToTop);

            // Function to update the displayed language and active state
            function updateLang(lang) {
                const isEs = lang === 'es';
                document.querySelectorAll('.lang-es').forEach(el => el.classList.toggle('hidden', !isEs));
                document.querySelectorAll('.lang-en').forEach(el => el.classList.toggle('hidden', isEs));
                body.lang = lang;

                // Update meta tags and title for SEO
                langElements.forEach(el => {
                    const content = el.getAttribute(`data-lang-${lang}`);
                    if (el.tagName === 'TITLE') {
                        el.textContent = content;
                    } else if (el.tagName === 'META') {
                        el.setAttribute('content', content);
                    }
                });

                // Update active button state
                langButtons.forEach(btn => {
                    if (btn.dataset.lang === lang) {
                        btn.classList.add('active-lang');
                        btn.classList.remove('bg-tertiary-dark', 'text-tertiary-text');
                    } else {
                        btn.classList.remove('active-lang');
                        btn.classList.add('bg-tertiary-dark', 'text-tertiary-text');
                    }
                });

                // Update currentLanguage in app.js and refresh influencer profiles
                if (window.updateAppLanguage) {
                    window.updateAppLanguage(lang);
                }

                // Update scroll-to-top button attributes
                const scrollToTopBtn = document.getElementById('scrollToTopBtn');
                if (scrollToTopBtn) {
                    const scrollToTopText = lang === 'es' ? 'Volver arriba' : 'Back to Top';
                    scrollToTopBtn.setAttribute('aria-label', scrollToTopText);
                    scrollToTopBtn.setAttribute('title', scrollToTopText);
                }

                // Update form placeholders based on selected language
                document.querySelectorAll('[data-placeholder-es][data-placeholder-en]').forEach(el => {
                    const placeholder = el.getAttribute(`data-placeholder-${lang}`);
                    if (placeholder) {
                        el.setAttribute('placeholder', placeholder);
                    }
                });
            }

            // Handle language selection
            langButtons.forEach(button => {
                button.addEventListener('click', () => {
                    const selectedLang = button.dataset.lang;
                    updateLang(selectedLang);
                });
            });

            // Initial language setup (default to Spanish)
            updateLang('es');
        });
    </script>
